# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.{c,h,m,mm}]
indent_size = 2

[scripts/*]
indent_size = 2

[*.js]
indent_size = 2

[*.{snap,swift}]
indent_size = 4

[Makefile]
trim_trailing_whitespace = true
indent_style = tab
indent_size = 8

